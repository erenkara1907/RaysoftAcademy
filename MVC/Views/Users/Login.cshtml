@model MVC.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Üye Giriş</title>
    <link href="~/Content/mail.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Login", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="3">
                    Giriş Ekranı
                </th>
            </tr>
            <tr>
                <td>
                    Üye Mail Adresi
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Email)
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Parola
                </td>
                <td>
                    @Html.PasswordFor(m => m.Password)
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Giriş" />
                </td>
                <td>
                    @Html.ActionLink("Şifremi Unuttum", "Index", "SifreHatirlat")
                </td>
            </tr>
            <tr>
                <td colspan="3"><span class="renk ">@ViewBag.Mesaj</span></td>
            </tr>
        </table>
    }
</body>
</html>
